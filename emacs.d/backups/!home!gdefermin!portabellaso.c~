#include <stdio.h>
#include <unistd.h>

int main(int argc, char **argv) {
  char *top="ABCDEFGHIJKLM";
  char *bottom="NOPQRSTUVWXYZ";

  char c;
  int stage=0;
  int pos=0;
  
  while(read(0, &c, 1) > 0) {
    switch(stage){
    case 0:
    case 1:
    case 4:
    case 6:
      stage = (c>77)? stage+1 : 0;
      break;
    case 7:
      printf("Found on pos: %d\n",pos-7);
      stage = 0;
      break;
    default:
      stage = (c>77)? 0 : stage+1;
    }
    pos++;
  }
}
